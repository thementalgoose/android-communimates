<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/chat_bubble_other"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/big_m"
        android:layout_width="250dp"
        android:id="@+id/imgBigM"
        android:layout_height="200dp" />

    <ImageView
        android:layout_alignTop="@id/imgBigM"
        android:layout_alignStart="@id/imgBigM"
        android:layout_marginStart="-36dp"
        android:id="@+id/imgSmallM"
        app:srcCompat="@drawable/small_m"
        android:layout_width="125dp"
        android:layout_height="100dp" />

</RelativeLayout>